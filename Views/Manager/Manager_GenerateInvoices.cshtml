@using MonthlyClaimsSystem.ViewModels
@model List<InvoiceViewModel>

    <style>
    body {
        background-color: #121212;
        font-family: 'Segoe UI', sans-serif;
        color: #f1f1f1;
    }

    .report-container {
        max-width: 1200px;
        margin: auto;
        padding: 30px;
        background-color: white;
        border-radius: 12px;
        box-shadow: 0 0 15px rgba(0,0,0,0.3);
    }

    h2 {
        background-color: #c82333;
        color: white;
        padding: 12px;
        border-radius: 8px;
        text-align: center;
        margin-bottom: 25px;
    }


    table {
        background-color: #2c2c2c;
        color: #f1f1f1;
        border-radius: 8px;
        overflow: hidden;
    }

        table th {
            background-color: #c82333;
            color: white;
        }

        table td, table th {
            padding: 10px;
            text-align: center;
            color: white
        }

    </style>

<div class="report-container mt-5">
    <h2>Invoices</h2>

<!-- Totals -->
<div class="row totals mb-4">
    <div class="col-md-4">
        <div class="alert alert-success">
            Total due this month: R @ViewBag.ApprovedTotal
        </div>
    </div>
    <div class="col-md-4">
        <div class="alert alert-danger">
            Total spent this year: R @ViewBag.DeniedTotal
        </div>
    </div>
    <div class="col-md-4">
        <div class="alert alert-warning">
            Total undecided for this month: R @ViewBag.PendingTotal
        </div>
    </div>
</div>


<div class="container mt-5">
    

    @foreach (var month in Model.Select(i => i.ClaimMonth).Distinct().OrderBy(m => m))
    {
        <h2 class="mt-4">Invoices for @month</h2>

        @foreach (var invoice in Model.Where(i => i.ClaimMonth == month).OrderBy(i => i.LecturerName))
        {
            <div class="invoice-box mb-4 p-3 bg-dark text-light rounded">
                <h4>
                    Lecturer: @invoice.LecturerName (@invoice.EmployeeNumber) <br />
                    @* Month: @invoice.ClaimMonth *@
                </h4>
                <table class="table table-striped table-dark">
                    <thead>
                        <tr>
                            <th>Claim Type</th>
                            <th>Hours</th>
                            <th>Rate</th>
                            <th>Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in invoice.LineItems)
                        {
                            <tr>
                                <td>@item.ClaimType</td>
                                <td>@item.Hours</td>
                                <td>@item.Rate</td>
                                <td>@item.Total</td>
                            </tr>
                        }
                    </tbody>
                </table>
                <h5 class="text-success">Monthly Total: R @invoice.GrandTotal</h5>
            </div>
        }
    }
</div>
    <a class="btn btn-secondary mt-4" asp-controller="Manager" asp-action="Manager_Dashboard">Back to Dashboard</a>
</div>

