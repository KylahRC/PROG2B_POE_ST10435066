@{
    ViewData["Title"] = "Claims System - Coordinator: View Approved Claims";
}
@model List<MonthlyClaimsSystem.Models.Claim>


<style>
    .claim-card {
        background-color: white;
        border-left: 6px solid #c82333;
        border-radius: 12px;
        padding: 20px;
        margin-bottom: 20px;
        box-shadow: 0 0 10px rgba(0,0,0,0.3);
        color: #f1f1f1;
    }

        .claim-card h4 {
            color: black;
            margin-bottom: 10px;
        }

        .claim-card .claim-meta {
            color: dimgray;
            font-size: 14px;
            margin-bottom: 10px;
        }

    .status {
        font-weight: bold;
        padding: 6px 12px;
        border-radius: 8px;
        display: inline-block;
        background-color: #28a745;
        color: white;
        margin-top: 10px;
    }

    body {
        background-color: #121212;
        font-family: 'Segoe UI', sans-serif;
    }
</style>

<div class="container mt-5">
    <h2 class="text-white mb-4">Approved Claims</h2>

    @foreach (var claim in Model)
    {
        <div class="claim-card">
            <h4>Claim #@claim.ClaimId — @claim.ClaimType</h4>
            <div class="claim-meta">
                <strong>Lecturer:</strong> @claim.Lecturer.Name.Substring(0, 1). @claim.Lecturer.Surname<br />
                <strong>Month:</strong> @claim.ClaimMonth<br />
                <strong>Hours:</strong> @claim.HoursWorked hrs at R@claim.HourlyRate/hr<br />
                <strong>Total:</strong> R @(claim.HoursWorked* claim.HourlyRate)<br />
                <strong>Notes:</strong> @claim.Notes
            </div>
            <div class="status">@claim.Status</div>

            <div class="mt-3">
                <a class="btn btn-outline-light btn-sm" asp-action="Coordinator_ReviewClaim" asp-route-id="@claim.ClaimId">Review / Override</a>
            </div>
        </div>
    }
    <a class="btn btn-secondary mt-4" asp-controller="Coordinator" asp-action="Coordinator_Dashboard">Back to Dashboard</a>
</div>
