@{
    ViewData["Title"] = "Claims System - Coordinator: View Pending Claims";
}
@model List<MonthlyClaimsSystem.Models.Claim>

<style>
    .claim-card {
        background-color: white;
        border-left: 6px solid #ffc107;
        border-radius: 12px;
        padding: 20px;
        margin-bottom: 20px;
        box-shadow: 0 0 10px rgba(0,0,0,0.3);
        color: #f1f1f1;
    }

        .claim-card h4 {
            color: black;
            margin-bottom: 10px;
        }

        .claim-card .claim-meta {
            color: dimgray;
            font-size: 14px;
            margin-bottom: 10px;
        }

        .claim-card .status {
            font-weight: bold;
            padding: 6px 12px;
            border-radius: 8px;
            display: inline-block;
        }

    .status-approved {
        background-color: #28a745;
        color: white;
    }

    .status-pending {
        background-color: #ffc107;
        color: black;
    }

    .status-denied {
        background-color: #dc3545;
        color: white;
    }

    .claim-actions a {
        margin-right: 10px;
    }

    .review-btn {
        background-color: #ffc107; /* Bootstrap warning yellow */
        color: black;
        font-weight: bold;
        padding: 8px 16px;
        border: none;
        border-radius: 6px;
        text-decoration: none;
        display: inline-block;
        transition: background-color 0.3s ease;
    }

    .system-log {
        font-style: italic;
        color: gray;
    }

    .human-log {
        color: black;
    }

    body {
        background-color: #121212;
        font-family: 'Segoe UI', sans-serif;
    }
</style>

<div class="container mt-5">
    <h2 class="mb-4 text-white">Pending Claims</h2>
    @foreach (var claim in Model)
    {
        var statusClass = claim.Status.ToLower() switch
        {
            "approved" => "status-approved",
            "pending" => "status-pending",
            "denied" => "status-denied",
            _ => "status-pending"
        };

        <div class="claim-card">
            <h4>Claim #@claim.ClaimId — @claim.ClaimType</h4>
            <div class="claim-meta">
                <strong>Lecturer:</strong> @claim.EmployeeNumber<br />
                <strong>Month:</strong> @claim.ClaimMonth<br />
                <strong>Hours:</strong> @claim.HoursWorked hrs at R @claim.HourlyRate/hr<br />
                <strong>Total:</strong> R @(claim.HoursWorked* claim.HourlyRate)<br />
                <strong>Submitted:</strong> @claim.SubmittedAt.ToString("f")<br />
                <strong>Notes:</strong> @claim.Notes

                @if (!string.IsNullOrEmpty(claim.AttachmentPath))
                {
                    <strong>Attachment:</strong>
                    <a href="@claim.AttachmentPath" target="_blank">@claim.AttachmentName</a>

                    <br />
                }

                <ul class="list-group mt-2">
                    @foreach (var log in claim.StatusLogs.OrderByDescending(l => l.ChangeDate))
                    {
                        var cssClass = log.IsSystemChange ? "system-log" : "human-log";
                        var actor = log.ChangedBy;

                        <li class="list-group-item @cssClass">
                            <strong>@log.NewStatus</strong> by @actor on @log.ChangeDate.ToString("f")

                            @if (!string.IsNullOrWhiteSpace(log.Reason))
                            {
                                <br />
                                <strong>Reason:</strong>
 
                                @log.Reason
                            }
                        </li>
                    }
                </ul>
            </div>

            <div class="claim-actions mt-3">
                <a class="review-btn" asp-action="Coordinator_ReviewClaim" asp-route-id="@claim.ClaimId">Review Claim</a>
            </div>
        </div>
    }
    <a class="btn btn-secondary mt-4" asp-controller="Coordinator" asp-action="Coordinator_Dashboard">Back to Dashboard</a>
</div>
