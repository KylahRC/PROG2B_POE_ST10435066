@{
    ViewData["Title"] = "Claims System - Coordinator: View Pending Claims";
}
@model List<MonthlyClaimsSystem.Models.Claim>


<style>
    .claim-card {
        background-color: white;
        border-left: 6px solid #c82333;
        border-radius: 12px;
        padding: 20px;
        margin-bottom: 20px;
        box-shadow: 0 0 10px rgba(0,0,0,0.3);
        color: #f1f1f1;
    }

        .claim-card h4 {
            color: black;
            margin-bottom: 10px;
        }

        .claim-card .claim-meta {
            color: dimgray;
            font-size: 14px;
            margin-bottom: 10px;
        }

    .claim-card .status {
        font-weight: bold;
        padding: 6px 12px;
        border-radius: 8px;
        display: inline-block;
    }
     
    .status-approved {
        background-color: #28a745;
        color: white;
    }

    .status-pending {
        background-color: #ffc107;
        color: black;
    }

    .status-denied {
        background-color: #dc3545;
        color: white;
    }

    .claim-actions a {
        margin-right: 10px;
    }

    

    body {
        background-color: #121212;
        font-family: 'Segoe UI', sans-serif;
    }
</style>

@foreach (var claim in Model)
{
    <div class="claim-card">
        <h4>Claim #@claim.ClaimId — @claim.ClaimType</h4>
        <div class="claim-meta">
            <strong>Lecturer:</strong> @claim.EmployeeNumber<br />
            <strong>Month:</strong> @claim.ClaimMonth<br />
            <strong>Hours:</strong> @claim.HoursWorked hrs at R@claim.HourlyRate/hr<br />
            <strong>Total:</strong> R @(claim.HoursWorked* claim.HourlyRate)<br />
            <strong>Submitted:</strong> @claim.SubmittedAt.ToString("f")<br />
            <strong>Notes:</strong> @claim.Notes
        </div>
        <div class="status status-pending">@claim.Status</div>

        <div class="claim-actions mt-3">
            <a class="btn btn-outline-light btn-sm" asp-action="Coordinator_ReviewClaim" asp-route-id="@claim.ClaimId">Review Claim</a>            
        </div>
    </div>
}

