@{
    ViewData["Title"] = "Claims System - Lecturer: Submit Claim";
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<style>
    .claim-form {
        max-width: 600px;
        margin: auto;
        padding: 30px;
        background-color: #fff;
        border-radius: 12px;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }

        .claim-form h2 {
            background-color: #c82333;
            color: white;
            padding: 10px;
            border-radius: 8px;
            text-align: center;
            margin-bottom: 20px;
        }

        .claim-form label {
            font-weight: bold;
        }

        .claim-form .form-control {
            border-radius: 8px;
        }

        .claim-form .btn {
            background-color: #c82333;
            color: white;
            font-weight: bold;
            border-radius: 8px;
            width: 100%;
        }

        .claim-form .cancel-btn {
            background-color: #6c757d;
            margin-top: 10px;
        }

    body {
        background-color: #121212;
        font-family: 'Segoe UI', sans-serif;
    }
</style>


<div class="claim-form mt-5">
    <h2>Submit Monthly Claim</h2>
        <form asp-action="SubmitClaim" method="post" enctype="multipart/form-data">
            <div class="form-group mb-3">
                <label for="claimMonth">This claim is for the month of:</label>
                <select id="claimMonth" name="claimMonth" class="form-control" required>
                    <option value="">-- Select Month --</option>
                    <option>January</option>
                    <option>February</option>
                            <option>March</option>
                            <option>April</option>
                            <option>May</option>
                            <option>June</option>
                            <option>July</option>
                            <option>August</option>
                            <option>September</option>
                            <option>October</option>
                            <option>November</option>
                            <option>December</option>
                        </select>
                    </div>

                <div class="form-group mb-3">   
                    <label for="claimType">I am claiming for the activity of:</label>
                    <select id="claimType" name="claimType" class="form-control" required>
                        <option value="">-- Select Claim Type --</option>
                        <!-- Paid categories -->
                        <optgroup label="Paid Work">
                            <option value="Marking">Lecture</option>
                            <option value="Marking">Marking</option>
                            <option value="Moderation">Moderation</option>
                            <option value="ExamSetting">Exam Setting</option>
                            <option value="CurriculumDevelopment">Curriculum Development</option>
                            <option value="ResearchSupervision">Research Supervision</option>
                            <option value="Workshops">Workshops/Seminars</option>
                            <option value="Consultation">Consultation Hours (Formal)</option>
                            <option value="SpecialProjects">Special Project (Paid)</option>
                        </optgroup>
                        <!-- Unpaid categories -->
                        <optgroup label="Unpaid Work">
                            <option value="Invigilation">Invigilation</option>
                            <option value="Meeting">Department Meeting</option>
                            <option value="Training">Training/Orientation</option>
                            <option value="ContentCreation">Content Creation/Marketing</option>
                            <option value="Outreach">Community Outreach</option>
                            <option value="Admin">Administrative Work Outside Duties</option>
                            <option value="SpecialProjects">Special Project (Unpaid)</option>
                        </optgroup>
                        <!-- Other -->
                        <option value="Other">Other</option>
                    </select>
		        </div>

                <div class="form-group mb-3">
                    <label for="hoursWorked">I am claiming for this many hours: </label>
                    <input type="number" id="hoursWorked" name="hoursWorked" class="form-control"
                           placeholder="e.g. 4" step="1" min="1" required />
                </div>

                <div class="form-group mb-3">
                    <label for="hourlyRate">At the hourly Rate (in Rands) of:</label>
                    <input type="number" id="hourlyRate" name="hourlyRate" class="form-control"
                           placeholder="e.g. 250" step="5" min="0" required />
                </div>

                <div class="form-group mt-3">
                    <label for="supportingFile">Upload Supporting Documents:</label>
                                    <input type="file" name="supportingFile" class="form-control"
                            accept=".pdf,.doc,.docx,.xls,.xlsx,.txt" required />
                </div>

                <div class="form-group mb-3">
                    <label for="notes">Additional Notes:</label>
                    <textarea id="notes" name="notes" class="form-control" rows="3"></textarea>
                </div>

                <button type="submit" class="btn-danger">Submit Claim</button>
                <a class="btn cancel-btn" asp-controller="Lecturer" asp-action="Lecturer_Dashboard">Cancel</a>
        </form>
</div>
