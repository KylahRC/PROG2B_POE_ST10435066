@{
    ViewData["Title"] = "Claims System - Lecturer: View Claims";
    
}

@model List<MonthlyClaimsSystem.Models.Claim>


<style>
    .claim-card {
        background-color: white;
        border-left: 6px solid #c82333;
        border-radius: 12px;
        padding: 20px;
        margin-bottom: 20px;
        box-shadow: 0 0 10px rgba(0,0,0,0.3);
        color: #f1f1f1;
    }

    .claim-card h4 {
        color: black;
        margin-bottom: 10px;
    }

    .claim-card .claim-meta {
        color: dimgray;
        font-size: 14px;
        margin-bottom: 10px;
    }

    .claim-card .status {
        font-weight: bold;
        padding: 6px 12px;
        border-radius: 8px;
        display: inline-block;
    }

    .status-approved {
        background-color: #28a745;
        color: white;
    }

    .status-pending {
        background-color: #ffc107;
        color: black;
    }

    .status-denied {
        background-color: #dc3545;
        color: white;
    }

    .claim-actions a {
        color: black;
        background-color: white;
        margin-bottom: 10px;
        margin-right: 10px;
    }

    body {
        background-color: #121212;
        font-family: 'Segoe UI', sans-serif;
    }
</style>

@foreach (var claim in Model)
{
    var statusClass = claim.Status.ToLower() switch
    {
        "approved" => "status-approved",
        "pending" => "status-pending",
        "denied" => "status-denied",
        _ => "status-pending"
    };

    
        <div class="claim-card">
            <h4>Claim #@claim.ClaimId — @claim.ClaimType</h4>
            <div class="claim-meta">
            <strong>Month:</strong> @claim.ClaimMonth<br />
            <strong>Hours:</strong> @claim.HoursWorked hrs at R@claim.HourlyRate/hr<br />
            <strong>Total:</strong> R @(claim.HoursWorked* claim.HourlyRate)<br />
            <strong>Submitted:</strong> @claim.SubmittedAt.ToString("f")<br />
                @if (!string.IsNullOrEmpty(claim.AttachmentPath))
                {
                    <strong>Attachment:</strong>
                    <a href="@claim.AttachmentPath" target="_blank">@claim.AttachmentName</a>

                    <br />
                }

            <strong>Notes:</strong> @claim.Notes
            @foreach (var log in claim.StatusLogs.OrderByDescending(l => l.ChangeDate))
            {
                var name = log.ChangedByUser != null
                ? $"{log.ChangedByUser.Name.Substring(0, 1)}. {log.ChangedByUser.Surname}"
                : log.ChangedBy; // fallback to employee number if name missing

                <li class="list-group-item">
                    <strong>@log.NewStatus</strong> by @name on @log.ChangeDate.ToString("f")
                    @if (!string.IsNullOrWhiteSpace(log.Reason))
                    {
                        <br />
                        <strong>Reason:</strong>
 
                        @log.Reason
                    }
                </li>
            }


            </div>
            <div class="status">@claim.Status</div>
        </div>
    

    

}


<a class="btn cancel-btn mt-4" asp-controller="Lecturer" asp-action="Lecturer_Dashboard">Return</a>