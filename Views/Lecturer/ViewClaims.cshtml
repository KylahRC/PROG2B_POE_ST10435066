<style>
    .claim-card {
        background-color: white;
        border-left: 6px solid #c82333;
        border-radius: 12px;
        padding: 20px;
        margin-bottom: 20px;
        box-shadow: 0 0 10px rgba(0,0,0,0.3);
        color: #f1f1f1;
    }

    .claim-card h4 {
        color: black;
        margin-bottom: 10px;
    }

    .claim-card .claim-meta {
        color: dimgray;
        font-size: 14px;
        margin-bottom: 10px;
    }

    .claim-card .status {
        font-weight: bold;
        padding: 6px 12px;
        border-radius: 8px;
        display: inline-block;
    }

    .status-approved {
        background-color: #28a745;
        color: white;
    }

    .status-pending {
        background-color: #ffc107;
        color: black;
    }

    .status-denied {
        background-color: #dc3545;
        color: white;
    }

    .claim-actions a {
        color: black;
        background-color: white;
        margin-bottom: 10px;
        margin-right: 10px;
    }

    body {
        background-color: #121212;
        font-family: 'Segoe UI', sans-serif;
    }
</style>

@model List<MonthlyClaimsSystem.Models.Claim>

@foreach (var claim in Model)
{
    <div class="claim-card">
        <h4>Claim #@claim.ClaimId — @claim.ClaimType</h4>
        <div class="claim-meta">
            <strong>Lecturer:</strong> @ViewBag.Username<br />
            <strong>Month:</strong> @claim.ClaimMonth<br />
            <strong>Hours:</strong> @claim.HoursWorked hrs at R@claim.HourlyRate/hr<br />
            <strong>Notes:</strong> @claim.Notes
        </div>

        <div class="status @(claim.Status.ToLower() == "approved" ? "status-approved" : claim.Status.ToLower() == "denied" ? "status-denied" : "status-pending")">
            @claim.Status
        </div>

        <div class="claim-actions mt-3">
            <a class="btn btn-outline-light btn-sm" asp-action="ReviewClaimLecturer" asp-route-id="@claim.ClaimId">View Details</a>
        </div>
    </div>
}

<a class="btn cancel-btn mt-4" asp-controller="Lecturer" asp-action="Dashboard">Return</a>

